@model WebApp.Models.EditClinicAnimalViewModel

@{
	ViewData["Title"] = "EditCA";
}

<h1>EditCA</h1>

<h4>EditClinicAnimalViewModel</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="EditCA">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="@Model.ClinicAnimal.Name" class="control-label"></label>
				<input asp-for="@Model.ClinicAnimal.Name" class="form-control" />
				<span asp-validation-for="@Model.ClinicAnimal.Name" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="@Model.ClinicAnimal.OwnerName" class="control-label"></label>
				<input asp-for="@Model.ClinicAnimal.OwnerName" class="form-control" />
				<span asp-validation-for="@Model.ClinicAnimal.OwnerName" class="text-danger"></span>
			</div>

			<div class="form-group">

				<label asp-for="@Model.ClinicAnimal.OwnerLastName" class="control-label"></label>
				<input asp-for="@Model.ClinicAnimal.OwnerLastName" class="form-control" />
				<span asp-validation-for="@Model.ClinicAnimal.OwnerLastName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label class="control-label">Has Microchip ?</label>
				<div class="form-check">
					<input class="form-check-input" type="checkbox" id="HasMicrochip" name="HasMicrochip" value="true">
				</div>
				<span asp-validation-for="@Model.ClinicAnimal.HasMicrochip" class="text-danger"></span>
			</div>
			<div id="showthings" style="display: none;">
				<div class="form-group">
					<label asp-for="@Model.ClinicAnimal.MicrochipNumber" class="control-label"></label>
					<input asp-for="@Model.ClinicAnimal.MicrochipNumber" class="form-control" />
					<span asp-validation-for="@Model.ClinicAnimal.MicrochipNumber" class="text-danger"></span>
				</div>
				</div>


				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>

		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		<script src="~/js/microchip.js" asp-append-version="true"></script>

		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
