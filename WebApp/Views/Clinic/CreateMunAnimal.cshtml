@model DataLayer.MunicipalAnimal

@{
    ViewData["Title"] = "CreateMunAnimal";
}

<h1>CreateMunAnimal</h1>

<h4>MunicipalAnimal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMunAnimal" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryStart" class="control-label"></label>
                <input asp-for="RecoveryStart" class="form-control" />
                <span asp-validation-for="RecoveryStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecoveryEnd" class="control-label"></label>
                <input asp-for="RecoveryEnd" class="form-control" />
                <span asp-validation-for="RecoveryEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input type="file" asp-for="Picture" accept=".jpg,.png,.gif,.svg,.jpeg" name="file" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsInHospital" /> @Html.DisplayNameFor(model => model.IsInHospital)
                </label>
            </div>
         @*   <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
          
            <div class="form-group">
                <label asp-for="Typology" class="control-label"></label>
                <input asp-for="Typology" class="form-control" />
                <span asp-validation-for="Typology" class="text-danger"></span>
            </div>
           
            
            <div class="form-group">
                <label asp-for="CoatColor" class="control-label"></label>
                <input asp-for="CoatColor" class="form-control" />
                <span asp-validation-for="CoatColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Has Microchip ?</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="HasMicrochip" name="HasMicrochip" value="true">
                </div>
                <span asp-validation-for="HasMicrochip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MicrochipNumber" class="control-label"></label>
                <input asp-for="MicrochipNumber" class="form-control" />
                <span asp-validation-for="MicrochipNumber" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
