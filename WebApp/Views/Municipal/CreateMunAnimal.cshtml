@*@model DataLayer.MunicipalAnimal*@
@model WebApp.Models.UploadMunicipalAnimal
@{
    ViewData["Title"] = "CreateMunAnimal";
}

<h1>CreateMunAnimal</h1>

<h4>MunicipalAnimal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMunAnimal" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Typology" class="control-label"></label>
                <input asp-for="@Model.Typology" class="form-control" />
                <span asp-validation-for="@Model.Typology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RecoveryStart" class="control-label"></label>
                <input asp-for="@Model.RecoveryStart" class="form-control" />
                <span asp-validation-for="@Model.RecoveryStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RecoveryEnd" class="control-label"></label>
                <input asp-for="@Model.RecoveryEnd" class="form-control" />
                <span asp-validation-for="@Model.RecoveryEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Picture" class="control-label"></label>
                <input type="file" asp-for="@Model.Picture"  class="form-control" />
                <span asp-validation-for="@Model.Picture" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsInHospital" /> @Html.DisplayNameFor(model => model.IsInHospital)
                </label>
            </div>
         @*   <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
          
            <div class="form-group">
                <label asp-for="@Model.Typology" class="control-label"></label>
                <input asp-for="@Model.Typology" class="form-control" />
                <span asp-validation-for="@Model.Typology" class="text-danger"></span>
            </div>
           
            
            <div class="form-group">
                <label asp-for="@Model.CoatColor" class="control-label"></label>
                <input asp-for="@Model.CoatColor" class="form-control" />
                <span asp-validation-for="@Model.CoatColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Has Microchip ?</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="HasMicrochip" name="HasMicrochip" value="true">
                </div>
                <span asp-validation-for="@Model.HasMicrochip" class="text-danger"></span>
            </div>
            <div id="showthings" style="display: none;">
                <div class="form-group">
                    <label asp-for="@Model.MicrochipNumber" class="control-label"></label>
                    <input asp-for="@Model.MicrochipNumber" class="form-control" />
                    <span asp-validation-for="@Model.MicrochipNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OwnerName" class="control-label"></label>
                    <input asp-for="@Model.OwnerName" class="form-control" />
                    <span asp-validation-for="@Model.OwnerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OwnerLastName" class="control-label"></label>
                    <input asp-for="@Model.OwnerLastName" class="form-control" />
                    <span asp-validation-for="@Model.OwnerLastName" class="text-danger"></span>
                </div>
            </div>
       
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        var hasMicrochipCheckbox = document.getElementById("HasMicrochip");
        var showDiv = document.getElementById("showthings");

        hasMicrochipCheckbox.addEventListener("click", function () {
            if (hasMicrochipCheckbox.checked) {
                showDiv.style.display = "block";
            } else {
                showDiv.style.display = "none";
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
